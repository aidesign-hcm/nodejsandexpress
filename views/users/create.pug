extends ../layout/common 
block content
    .card.mt-4.mx-auto(style="width: 22rem;")
        .card-body
            .card-title.mt-2 Create User
            .card-text
                if errors
                    each e in errors
                        .alert.alert-danger= e
                form(action="/users/create", method="POST")
                    .form-group
                        label Name
                        input.form-control(type="text" name="name" value= values ? values.name : "")
                    .form-group
                        label Phone
                        input.form-control(type="text" name="phone" value= values ? values.phone : "")
                    .form-group
                        label Email
                        input.form-control(type="email" name="email" value= values ? values.email : "")
                    .form-group
                        label Password
                        input.form-control(type="password" name="password" value= values ? values.password : "")
                    button.btn.btn-primary(type="submit") Create
                